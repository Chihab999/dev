pipeline {
    agent any
    
    stages {
    
        stage('Checkout') {
            steps {
                // Checkout your code from source control
              checkout scmGit(branches: [[name: '*/main']], extensions: [], gitTool: 'Default', userRemoteConfigs: [[url: 'https://github.com/Chihab999/dev.git']])
            }
        }
       
        stage('Install PHP') {
            steps {
                 bat '''
                    choco install php
                '''
            }
        }
        
        stage('Installation des dépendances') {
            steps {
                sh 'composer install'
            }
        }
        
        stage('Validation de la qualite du code') {
            steps {
                // Run the validation test on jeu.php
              git branch: 'main', url: 'https://github.com/Chihab999/dev.git'
              
            }
        }
        
        stage('Test') {
            steps {
               fileExists ' phpunit' 
               sh 'php vendor/bin/phpunit phpunit'
                
            }
        }
    }
    
     post {
        always {
            script {
                if (currentBuild.result != 'SUCCESS') {
                    slackSend color: '#FF0000', message: 'The pipeline has failed!'
                } else {
                    slackSend color: '#00FF04', message: 'The pipeline has succeeded!'
                }
            }
        }
    }
    
    options {
        // Définir une limite de temps maximale pour la construction
        timeout(time: 30, unit: 'MINUTES')
    }
}
